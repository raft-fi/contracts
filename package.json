{
  "name": "@raft-fi/contracts",
  "version": "1.0.0",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "hardhat": "^2.14.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.4",
    "solhint": "^3.4.0",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@tempusfinance/tempus-utils": "npm:@tempus-labs/tempus-utils@^1.0.7",
    "@redstone-finance/evm-connector": "^0.0.22"
  },
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "lint": "yarn lint:sol && yarn prettier:check",
    "lint:sol": "forge fmt --check && yarn solhint \"{script,contracts,test}/**/*.sol\"",
    "lint:sol:write": "forge fmt && yarn solhint --fix \"{script,contracts,test}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\"",
    "postinstall": "husky install && chmod +x .husky/*"
  },
  "lint-staged": {
    "*.sol": [
      "yarn lint:sol:write"
    ],
    "*.{json,md,yml}": [
      "yarn prettier:write"
    ]
  }
}
